<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>

        <!-- SIAGI INVOICE WIZARD -->

        <record id="create_invoice_wizard_action" model="ir.actions.server">
            <field name="name">Importar</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="model_siagi_invoice_wizard"/>
            <field name="state">code</field>
            <field name="code">action = env['siagi.invoice.wizard'].create_import_wizard()</field>
        </record>

        <record model="ir.ui.view" id="siagi_invoice_wizard_form_view">
            <field name="name">siagi_invoice_wizard_form</field>
            <field name="model">siagi.invoice.wizard</field>
            <field name="arch" type="xml">
                <form string="Importar">

                  <group>
                    <field name="rtype"/>
                  </group>

                  <separator string="Pendientes"/>
                  <field name="line_ids" options='{"create": False, "create_edit": False, "no_open": True}'>
                    <tree create="0" edit="0">
                      <field name="name"/>
                      <field name="itype"/>
                      <field name="invoice_date"/>
                    </tree>
                    <form>
                      <group>
                        <field name="name" readonly="1"/>
                        <field name="itype" readonly="1"/>
                        <field name="invoice_date" readonly="1"/>
                      </group>
                    </form>
                  </field>
                  <footer>
                      <button name="import_pending_invoices" type="object" string="Importar" class="oe_highlight"/>
                      or
                      <button special="cancel" string="Cancel"/>
                  </footer>

                </form>
            </field>
        </record>

        <menuitem id="siagi_invoice_wizard_menu" name="Importar" sequence="10" parent="siagi_invoice_main_menu" action="create_invoice_wizard_action"/>

    </data>
</openerp>
