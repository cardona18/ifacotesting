<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="print_HSBC_2012">
        <t t-call="web.basic_layout">
            <t t-set="o" t-value="docs.with_context({'lang': 'en_US'})"/>
            <t t-set="c" t-value="o.company_id"/>
            <t t-set="j" t-value="o.journal_id"/>
            <style type="text/css">
                .page {
                margin-left: -15px !important;
                padding: 0px !important;
                border-left: 0px !important;
                }
                .toppage {
                position: absolute;
                top: 217px !important;
                width: 100% !important;
                left: 60px !important;
                right: -12px !important;
                }
                .nombres {
                font-size: 9px;
                }
                .secpage {
                position: absolute;
                top: 282px !important;
                width: 95% !important;
                right: 0px !important;
                left: 60px !important;
                margin-right: 20px !important;
                }
                .terpage {
                position: absolute;
                top: 468px !important;
                width: 97% !important;
                right: 0px !important;
                left: 60px !important;
                }
                .cheque {
                position: absolute;
                top: 1026px !important;
                left: -10px !important;
                right: 0px !important;
                }

            </style>
            <div class="page">
                <div class="toppage row">
                    <tr>
                        <div class="nombres col-xs-3 row">
                            <td style="text-align:left; left: 0px !important;"><span t-field="c.employee_autorizo"/></td>
                        </div>
                        <div class="nombres col-xs-3">
                            <td style="text-align:left; left: 0px !important;"><span t-field="c.employee_aprobo"/></td>
                        </div>
                        <div class="nombres col-xs-3">
                            <div class="col-xs-12">
                                <td style="text-align:left; top: 0px; left: 0px !important;"><span t-field="c.employee_elaboro"/></td>
                            </div>
                            <div class="col-xs-0">
                                <td/>
                            </div>
                        </div>
                        <div class="nombres col-xs-3">
                            <div class="col-xs-0">
                                <td/>
                            </div>
                            <div class="col-xs-12">
                                <td style="text-align:center; left: 0px !important;"><span t-field="o.partner_id"/></td>
                            </div>
                        </div>
                    </tr>
                </div>
                <div class="secpage row">
                    <div class="row">
                        <tr>
                            <div class="col-xs-3">
                                <td style="text-align:left; "><span t-field="o.payment_date" t-field-options="{&quot;format&quot;: &quot;MMMM d y&quot;}"/></td>
                            </div>
                            <div class="col-xs-2">
                                <td/>
                            </div>
                            <div class="col-xs-3 row">
                                <td style="text-align:left; left: 0px !important;"><span t-field="o.name"/></td>
                            </div>
                            <div class="col-xs-1">
                                <td/>
                            </div>
                            <div class="col-xs-3 text-center">
                                <small><td><span t-field="o.company_id"/></td></small>
                            </div>
                        </tr>
                    </div>
                    <div class="row" style="margin-top: 12px;">
                        <tr>
                            <div class="col-xs-9">
                                <td/>
                            </div>
                            <div class="col-xs-3 row">
                                <div class="col-xs-4 row">
                                    <td><span t-field="o.amount"/></td>
                                </div>
                                <div class="col-xs-4">
                                    <td/>
                                </div>
                                <div class="col-xs-4">
                                    <td/>
                                </div>
                            </div>
                        </tr>
                    </div>
                    <div class="row">
                        <div class="col-xs-7  col-sm-3 row">
                            <td style="text-align:left; left: 0px !important;"><span t-field="o.communication"/></td>
                        </div>
                        <div class="col-xs-2">
                            <td/>
                        </div>
                        <div class="col-xs-3">
                            <div class="col-xs-12">
                                <td><span t-field="o.check_number"/></td>
                            </div>
                            <div class="col-xs-12">
                                <td><span t-field="j.bank_id"/></td>
                            </div>
                            <div class="col-xs-12">
                                <td><span t-field="j.default_credit_account_id.code"/></td>
                            </div>
                        </div>
                        <br/>
                        <br/>
                    </div>
                </div>
                <div class="terpage row">
                    <tr>
                        <div class="col-xs-2">
                            <t t-foreach="o.move_line_ids" t-as="m">
                                <t t-foreach="m.account_id" t-as="i">
                                    <p><span t-field="i.code"/></p>
                                </t>
                            </t>
                        </div>
                        <div class="col-xs-4">
                            <t t-foreach="o.move_line_ids" t-as="m">
                                <t t-foreach="m.account_id" t-as="i">
                                    <p><span t-field="i.name"/></p>
                                </t>
                            </t>
                        </div>
                        <div class="col-xs-4">
                            <t t-foreach="o.move_line_ids" t-as="m">
                                <p><span t-field="m.name"/></p>
                            </t>
                        </div>
                        <div class="col-xs-2">
                            <t t-foreach="o.move_line_ids" t-as="m">
                                <t t-if="m.debit != 0.00">
                                    <td><span t-field="m.debit"/></td>
                                    <td>C</td>
                                    <p/>
                                </t>
                            </t>
                        </div>
                        <div class="col-xs-2">
                            <t t-foreach="o.move_line_ids" t-as="m">
                                <t t-if="m.credit != 0.00">
                                    <td><span t-field="m.credit"/></td>
                                    <td>A</td>
                                </t>
                            </t>
                        </div>
                    </tr>
                </div>
                <div class="cheque col-xs-12">
                    <div class="row">
                        <tr>
                            <div class="col-xs-8">
                                <td/>
                            </div>
                            <div class="col-xs-2">
                                <td style="text-align:left;"><span t-field="o.payment_date" t-field-options="{&quot;format&quot;: &quot;MMMM d y&quot;}"/></td>
                            </div>
                            <div class="col-xs-2">
                                <td/>
                            </div>
                        </tr>
                    </div>
                    <div class="row" style="margin-top: 62px;">
                        <tr>
                            <div class="col-xs-2">
                                <td/>
                            </div>
                            <div class="col-xs-7">
                                <td><span t-field="o.partner_id"/></td>
                            </div>
                            <div class="col-xs-3">
                                <td><span t-field="o.amount"/></td>
                            </div>
                        </tr>
                    </div>
                    <div class="row" style="margin-top: 16px;">
                        <tr>
                            <div class="col-xs-2">
                                <td/>
                            </div>
                            <div class="col-xs-10">
                                <td><span t-esc="o.amount_to_text(o.amount)"/></td>
                            </div>
                        </tr>
                    </div>
                    <div class="row" style="margin-top: 14px;">
                        <t t-if="j.no_negociable == 1">
                            <tr>
                                <div class="col-xs-12">
                                    <div class="col-xs-4">
                                        <td/>
                                    </div>
                                    <div class="col-xs-8">
                                        <td><b>Para depositar en la cuenta del beneficiario.</b></td>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="col-xs-5">
                                        <td/>
                                    </div>
                                    <div class="col-xs-7">
                                        <td><b>NO NEGOCIABLE</b></td>
                                    </div>
                                </div>
                            </tr>
                        </t>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <report id="action_print_HSBC_2012"
            string="Print Check (HSBC 2012)"
            model="account.payment"
            name="payment_reports_gi.print_HSBC_2012"
            file="payment_reports_gi.print_HSBC_2012"
            report_type="qweb-pdf"
            attachment_use="True"
            paperformat="l10n_us_check_printing.paperformat_check_us"
            print_report_name="'Check HSBC 2012 - %s' % (object.partner_id.name or '',)"
    />

</odoo>