<odoo>
    <data>
        <act_window id="account_invoice_cancel_action" name="Motivo de la cancelación" res_model="cancel.account.invoice" view_mode="form" target="new"/>

        <record model="ir.ui.view" id="cancel_account_invoice_form_view">
            <field name="name">cancel.account.invoice.form</field>
            <field name="model">cancel.account.invoice</field>
            <field name="arch" type="xml">
                <form string="Cancelar factura">
                    <group>
                        <field name="cancel_commentary" required="1"/>
                        <field name="cancel_type"/>
                        <field name="cause" required="1"/>
                    </group>
                    <footer>
                        <button name="action_invoice_cancel_gi" type="object" string="Cancelar Factura" groups="account.group_account_invoice,account_gi.accountant"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

