<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="invoice_import_form_inherit" model="ir.ui.view">
            <field name="name">invoice_import.invoice.form.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account_cancel.invoice_form_cancel_inherit"/>
            <field name="arch" type="xml">

                <!-- <xpath expr="//button[@name='action_invoice_cancel']" position="replace">
                    <button name="account_gi.account_invoice_cancel_action" type="action" states="draft,open" string="Cancelar" groups="account.group_account_manager"/>
                </xpath> -->

                <xpath expr="//button[@name='145']" position="replace">
                    <button name="145" id="account_invoice_payment_btn" type="action" states="open" string="Register Payment" groups="account.group_account_manager,account_gi.accountant" class="oe_highlight"/>
                </xpath>

                <xpath expr="//button[@name='action_invoice_open']" position="replace">
                    <button name="action_invoice_open_gi" type="object" states="draft" string="Validate" class="oe_highlight" groups="account.group_account_manager,account_gi.accountant"/>
                </xpath>

                <xpath expr="//button[@name='action_invoice_cancel']" position="replace">
                    <button name="account_gi.account_invoice_cancel_action" type="action" states="draft,open" string="Cancelar" groups="account.group_account_invoice,account_gi.accountant"/>
                </xpath>

                <xpath expr="//button[@name='action_invoice_draft']" position="replace">
                    <button name="action_invoice_draft" states="cancel" string="Set to Draft" type="object" groups="account.group_account_manager"/>
                </xpath>

                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="num_request"/>
                </xpath>


            </field>
        </record>

        <record id="invoice_supplier_form_inherit_gi" model="ir.ui.view">
            <field name="name">account.invoice.supplier.form.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">

                <!-- <xpath expr="//button[@name='action_invoice_cancel']" position="replace">
                    <button name="account_gi.account_invoice_cancel_action" type="action" states="draft,open" string="Cancelar" groups="account.group_account_manager"/>
                </xpath> -->
                <xpath expr="//page[@name='other_info']//field[@name='company_id']" position="after">
                    <field name="c_exchang" attrs="{'invisible': [('c_exchang', '=','0.0')]}"/>
                    <field name="exchang" attrs="{'invisible': [('exchang', '=', '0.0')]}"/>
                </xpath>

                <xpath expr="//button[@name='action_invoice_open']" position="replace">
                    <button name="action_invoice_open" type="object" states="draft" string="Validate" class="oe_highlight o_invoice_validate" groups="account.group_account_manager,account_gi.accountant"/>
                </xpath>

            </field>
        </record>

        <record id="account_invoice_form_gi" model="ir.ui.view">
            <field name="name">account.invoice.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='fiscal_position_id']" position="after">
                    <field name="expiration_days"/>
                    <field name="day_trans_payment"/>
                    <field name="aver_pay_part" invisible="1"/>
                    <field name="comments"/>
                    <field name="reason"/>
                    <field name="cancel_reason"/>
                </xpath>

                <xpath expr="//page[@name='other_info']//field[@name='name']" position="after">
                    <field name="comentario_cancel"/>
                    <field name="motivo_cancel"/>
                </xpath>
            </field>
        </record>

        <record id="view_l10n_mx_edi_invoice_form_inherit_gi" model="ir.ui.view">
            <field name="name">account.invoice.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="l10n_mx_edi.view_l10n_mx_edi_invoice_form_inherit"/>
            <field name="arch" type="xml">

                <xpath expr="//button[@name='l10n_mx_edi_update_pac_status']" position="replace">
                    <button name="l10n_mx_edi_update_sat_status_gi" string="Actualizar" class="oe_link" type="object" groups="account.group_account_invoice" attrs="{'invisible':['|', ('l10n_mx_edi_pac_status', 'in', ['signed', 'cancelled', False]), ('state', '=', 'draft')]}"/>
                </xpath>

            </field>
        </record>

        <menuitem id="certificate_lists"
                  name="Certificados"
                  groups="base.group_system"
                  action="l10n_mx_edi.certificate_list_action"/>

        <record forcecreate="True" id="ir_cron_account_invoice_action" model="ir.cron">
            <field name="name">Actualizar días de vencido</field>
            <field name="model_id" ref="model_account_invoice"/>
            <field name="state">code</field>
            <field name="code">model.get_expiration_days()</field>
            <field eval="True" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">12</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall"/>
        </record>

        <record forcecreate="True" id="ir_cron_day_trans_payment_action" model="ir.cron">
            <field name="name">Actualizar días trascurridos del pago</field>
            <field name="model_id" ref="model_account_invoice"/>
            <field name="state">code</field>
            <field name="code">model.get_trans_payment()</field>
            <field eval="True" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall"/>
        </record>

        <record forcecreate="True" id="update_current_gi" model="ir.cron">
            <field name="name">Actualizar tasas monedas</field>
            <field name="model_id" ref="model_account_invoice"/>
            <field name="state">code</field>
            <field name="code">model.update_currency_rates()</field>
            <field eval="True" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall"/>
        </record>

        <record forcecreate="True" id="aver_pay_part_gi" model="ir.cron">
            <field name="name">Actualizar promedio de pago</field>
            <field name="model_id" ref="model_account_invoice"/>
            <field name="state">code</field>
            <field name="code">model.get_aver_pay_part()</field>
            <field eval="True" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall"/>
        </record>

    </data>
</odoo>
