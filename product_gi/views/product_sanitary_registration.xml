<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>

        <!-- SALE SANITARY REGISTRATION VIEWS -->

        <record id="product_sanitary_registration_action" model="ir.actions.act_window">
            <field name="name">Registro sanitario</field>
            <field name="res_model">product.sanitary.registration</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.ui.view" id="product_sanitary_registration_form">
            <field name="name">product_sanitary_registration_form</field>
            <field name="model">product.sanitary.registration</field>
            <field name="arch" type="xml">
                <form name="Registro sanitario">
                    <sheet>

                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group col="2">
                            <group>
                                <field name="description_code"/>
                                <field name="gen_description"/>
                                <field name="group_lgsa226_id"/>
                                <field name="form_id"/>
                                <field name="expiration_months"/>
                                <field name="expedition_date"/>
                                <field name="expiration_date"/>
                                <field name="extension_date"/>
                                <field name="partner_maker_id" options="{'no_create_edit': True, 'no_create':True, 'no_open':True}"/>
                            </group>
                            <group>
                                <field name="therapy_instruction"/>
                                <field name="contraindication"/>
                                <field name="admin_form"/>
                                <field name="use_considerations"/>
                                <field name="has_thinner"/>
                                <field name="exchange_test"/>
                                <field name="update_tag_date"/>
                                <field name="update_ipps_date"/>
                            </group>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="product_sanitary_registration_tree">
            <field name="name">"product_sanitary_registration_tree"</field>
            <field name="model">product.sanitary.registration</field>
            <field name="arch" type="xml">
                <tree name="Registro sanitario">
                    <field name='name'/>
                    <field name="expiration_date"/>
                    <field name="description_code"/>
                </tree>
            </field>
        </record>

    </data>
</openerp>
