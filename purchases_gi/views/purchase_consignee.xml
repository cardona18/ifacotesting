<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>

        <!-- PURCHASE CONSIGNEE VIEWS -->

        <record id="purchase_consignee_action" model="ir.actions.act_window">
            <field name="name">Consignatario</field>
            <field name="res_model">purchase.consignee</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.ui.view" id="purchase_consignee_form">
            <field name="name">purchase_consignee_form</field>
            <field name="model">purchase.consignee</field>
            <field name="arch" type="xml">
                <form name="Consignatario">
                    <group>
                        <field name="name"/>
                        <field name="address" class="oe_field_name" />
                    </group>
                </form>           
            </field>
        </record>

        <record model="ir.ui.view" id="purchase_consignee_tree">
            <field name="name">"purchase_consignee_tree"</field>
            <field name="model">purchase.consignee</field>
            <field name="arch" type="xml">
                <tree name="Consignatario">
                    <field name='name'/>
                    <field name="address" class="oe_field_name"  />
                </tree>
            </field>
        </record>

        <menuitem id="purchase_consignee_menu" parent="purchase.menu_product_in_config_purchase" name="Consignatario" action="purchase_consignee_action" sequence="10"/>

    </data>
</openerp>
