<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>

        <!-- Permisos de importación VIEWS -->

        <record id="import_licenses_action" model="ir.actions.act_window">
            <field name="name">Permisos de importación</field>
            <field name="res_model">import.licenses</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'group_by':'name_product'}</field>
        </record>

        <record model="ir.ui.view" id="import_licenses_form">
            <field name="name">import_licenses_form</field>
            <field name="model">import.licenses</field>
            <field name="arch" type="xml">
                <form name="Permisos de importación">
                    <header>
                        <field name="state" nolabel="1" widget="statusbar"/>                        
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name_and_license" attrs="{'invisible':[('name_and_license','=','En borrador')]}" readonly="1"/>
                                <br/>
                            </h1>
                        </div>
                        
                        <group>
                            <field name="name"/>
                            <field name="is_linked" invisible="0"/>
                        </group>

                        <group>
                            <group>
                                <field name="validity"/>
                                <field name="to_extend"/>
                            </group>
                            <group>
                                <field name="end_validity"/>
                                <field name="end_to_extend"/>
                            </group>
                        </group>

                        <group>
                            <field name="name_product"/>
                            <field name="quantity"/>
                            <field name="uom_license" options="{'no_create':True, 'create_edit': false,'no_open': True}"/>
                            <field name="tariff_fraction"/>
                            <field name="report_expiration"/>
                            <field name="product_id"/>
                            <field name="import_license_file" filename="import_license_filename"/>
                            <field name='import_license_filename' invisible="1"/>
                        </group>


                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div> 
                    </sheet>
                </form>


            </field>

        </record>

        <record model="ir.ui.view" id="import_licenses_tree">
            <field name="name">"import_licenses_tree"</field>
            <field name="model">import.licenses</field>
            <field name="arch" type="xml">
                <tree name="Permisos de importación">
                    <field name='name_product'/>
                    <field name="name"/>
                    <field name="is_linked"/>
                </tree>
            </field>
        </record>
