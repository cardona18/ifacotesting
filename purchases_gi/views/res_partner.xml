<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>


        <template id="assets_backend" name="res_partner_assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <link rel="stylesheet" href="/purchases_gi/static/src/css/styles_forms.css"/>
            </xpath>
        </template>

        <!-- RES PARTNER VIEWS -->

        <record model="ir.ui.view" id="res_partner_purchases_gi">
            <field name="name">res_partner_purchases_gi</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">

                <!-- <xpath expr="//field[@name='ref']" position="after">
                    <button name="get_supplier_sequence" string="Calcular referencia interna" type="object" class="oe_highlight" groups="base.group_system"/>
                </xpath> -->


                <xpath expr="//field[@name='ref']" position="replace">
                    <field name="id" string="Referencia interna" readonly="1"/>
                </xpath>

                <!--                              
                  ___ ___  _ __ ___  _ __  _ __ __ _ ___ 
                 / __/ _ \| '_ ` _ \| '_ \| '__/ _` / __|
                | (_| (_) | | | | | | |_) | | | (_| \__ \
                 \___\___/|_| |_| |_| .__/|_|  \__,_|___/
                                    | |                  
                                    |_|                  
                -->


               <!--  
                ########################   VERIFICAR LINEAS   ##################################

                <xpath expr="//field[@name='date']" position="attributes">
                    <attribute name="string">Fecha de alta</attribute>
                </xpath>

                <xpath expr="//field[@name='date']" position="after">
                    <field name='type_of_consumption'/>
                    <field name="provider_for_manufacturing"/>
                    <field name='description_consumption'/>
                    <field name="payment_form"/>
                </xpath> -->

                <xpath expr="//group/field[@name='supplier']" position="after">
                    <field name="supplier_ledger_name" attrs="{'invisible': [('supplier', '=', False)], 'required': [('supplier', '=', True)]}"/>
                    <!-- <field name="supplier_person_type" attrs="{'invisible': [('supplier', '=', False)], 'required': [('supplier', '=', True)]}"/> -->
                    <field name="origin" required="1"/>
                    <field name="id_diot" attrs="{'required':[('origin','=','foreign')], 'invisible':[('origin','!=','foreign')]}"/>
                    <!-- <field name="in_draft"/> -->
                    <field name="product_category"/>
                </xpath>


                <xpath expr="//field[@name='title']" position="attributes">
                    <attribute name="attrs">{'invisible':[('supplier','=', True),('customer','=', False)]}</attribute>
                </xpath>


                <xpath expr="//field[@name='vat']" position="attributes">
                    <attribute name="string">RFC</attribute>
                    <attribute name="attrs">{'required':[('origin','=','national')]}</attribute>
                </xpath>

            </field>
        </record>

    </data>
</openerp>
