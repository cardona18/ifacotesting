            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='type']" position="after">
                    <!-- <field name='operating_cost' attrs="{'invisible':[('type','=','view')]}"/>
                    <field name='apportionment' attrs="{'invisible':[('type','=','view')]}"/>
                    <field name='manufacturing' attrs="{'invisible':[('type','=','view')]}"/>
