                    <field name='manufacturing' invisible="1"/>
                    <field name='sales' invisible="1"/>
                    <field name='admin' invisible="1"/>
                    <field name='investigation' invisible="1"/>
                    <field name='user_requirements'/>
                    
                </xpath>  
                <xpath expr="//field[@name='name']" position="after">
                    <group>
                        <field name='description_cat' attrs="{'invisible':[('type','=','view')]}"/>
