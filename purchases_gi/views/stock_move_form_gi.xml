<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>


        <record model="ir.ui.view" id="stock_move_form_gi_form">
            <field name="name">stock_move_form_gi_form</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_picking_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='procure_method']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>

                <xpath expr="//field[@name='product_id']" position="attributes">
                    <attribute name="options">{'no_create':True, 'create_edit': false,'no_open': True}</attribute>
                </xpath>
    
            </field>
        </record>



    </data>
</openerp>
