<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <!-- Uso de CFDI VIEWS -->

        <record id="use_cfdi_action" model="ir.actions.act_window">
            <field name="name">Uso de CFDI</field>
            <field name="res_model">use.cfdi</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.ui.view" id="use_cfdi_form">
            <field name="name">use_cfdi_form</field>
            <field name="model">use.cfdi</field>
            <field name="arch" type="xml">
                <form name="Uso de CFDI">
                    <group>
                        <field name="name"/>
                        <field name="use_cfdi"/>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="use_cfdi_tree">
            <field name="name">use_cfdi_tree</field>
            <field name="model">use.cfdi</field>
            <field name="arch" type="xml">
                <tree name="Uso de CFDI">
                    <field name='name'/>
                    <field name='use_cfdi'/>
                </tree>
            </field>
        </record>

        <menuitem id="use_cfdi_menu" parent="purchase.menu_product_in_config_purchase" name="Uso de CFDI" action="use_cfdi_action" sequence="11" groups="base.group_system"/>

    </data>
</odoo>
