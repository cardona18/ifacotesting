<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="purchase.report_purchaseorder_document">
        <html lang="es">

            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
                <div class="page">
                    <div class="oe_structure"/>
                    <div class="row">
                        <div class="col-xs-6">
                            <div t-if="o.delivery_addresses">
                                <strong>Dirección de entrega:</strong>
                                <div t-field="o.delivery_addresses"/>
                                <div t-field="o.r_addresses"/>
                            </div>
                            <div t-else="">
                                <strong>Dirección de la empresa:</strong>
                                <div t-if="o.dest_address_id">
                                    <div t-field="o.dest_address_id"
                                         t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                                </div>
                                <div t-if="not o.dest_address_id and o.picking_type_id and o.picking_type_id.warehouse_id">
                                    <span t-field="o.picking_type_id.warehouse_id.name"/>
                                    <div t-field="o.picking_type_id.warehouse_id.partner_id"
                                         t-options='{"widget": "contact", "fields": ["address", "phone"], "no_marker": True, "phone_icons": True}'/>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-5 col-xs-offset-1">
                            <strong>Proveedor:</strong>
                            <div>
                                <span t-field="o.partner_id.name"/>
                                <div>
                                    <span t-field="o.partner_id.street_number"/>
                                    <span t-if="o.partner_id.street_number2">/<span t-field="o.partner_id.street_number2"/></span>
                                    <span t-field="o.partner_id.street_name"/>
                                </div>
                                <span t-field="o.partner_id.l10n_mx_edi_colony"/>
                                <div>
                                    <span t-field="o.partner_id.state_id"/>
                                    <span t-field="o.partner_id.zip"/>
                                </div>
                                <span t-field="o.partner_id.country_id"/>
                            </div>
                            <div t-field="o.partner_id"
                                 t-options='{"widget": "contact", "fields": ["name", "phone"], "no_marker": True, "phone_icons": True}'/>
                            <p t-if="o.partner_id.vat"><t t-esc="o.company_id.country_id.vat_label or 'TIN'"/>: <span t-field="o.partner_id.vat"/></p>
                        </div>
                    </div>

                    <h2 t-if="o.state != 'draft'">Orden de compra #<span t-field="o.name"/></h2>
                    <h2 t-if="o.state == 'draft'">Solicitud de cotización #<span t-field="o.name"/></h2>

                    <div class="row mt32 mb32">
                        <div t-if="o.name" class="col-xs-3">
                            <strong>Nuestra referencia:</strong>
                            <p t-field="o.name"/>
                        </div>
                        <div t-if="o.partner_ref" class="col-xs-3">
                            <strong>Su referencia:</strong>
                            <p t-field="o.partner_ref"/>
                        </div>
                        <div t-if="o.date_order" class="col-xs-3">
                            <strong>Fecha de orden:</strong>
                            <p t-field="o.date_create_order"/>
                        </div>
                        <div t-if="o.type_origin" class="col-xs-3">
                            <strong>Tipo de compra:</strong>
                            <p t-field="o.type_origin"/>
                        </div>
                        <div t-if="o.currency_id" class="col-xs-3">
                            <strong>Moneda:</strong>
                            <p t-field="o.currency_id"/>
                        </div>
                        <div t-if="o.boarding_ways" class="col-xs-3">
                            <strong>Vía de embarque:</strong>
                            <p t-field="o.boarding_ways"/>
                        </div>
                        <div t-if="o.payment_term_id" class="col-xs-3">
                            <strong>Términos de Pago:</strong>
                            <p t-field="o.payment_term_id"/>
                        </div>
                        <div t-if="o.payment_method" class="col-xs-3">
                            <strong>Método de pago:</strong>
                            <p t-field="o.payment_method"/>
                        </div>
                        <div t-if="o.way_to_pay" class="col-xs-3">
                            <strong>Forma de pago:</strong>
                            <p t-field="o.way_to_pay"/>
                        </div>
                        <div t-if="o.use_cfdi" class="col-xs-3">
                            <strong>Uso de CFDI:</strong>
                            <p t-field="o.use_cfdi"/>
                        </div>
                        <div t-if="o.requisition_id" class="col-xs-3">
                            <strong>Solicitud de compras:</strong>
                            <p t-field="o.requisition_id"/>
                        </div>
                    </div>

                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th><strong>Producto</strong></th>
                                <th><strong>Descripción</strong></th>
                                <th><strong>Impuestos</strong></th>
                                <th class="text-center"><strong>Fecha</strong></th>
                                <th class="text-right"><strong>Cantidad</strong></th>
                                <th class="text-right"><strong>Precio unitario</strong></th>
                                <th class="text-right"><strong>Descuento (%)</strong></th>
                                <th class="text-right"><strong>Cantidad</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.order_line" t-as="line">
                                <t t-foreach="line.product_id" t-as="p">
                                    <td>
                                        <t t-foreach="p.seller_ids" t-as="s">
                                            <t t-if="o.partner_id == s.name">
                                                <div>
                                                    <span t-field="p.display_name"/>
                                                </div>
                                                <div>
                                                    <t t-if="s.product_code">
                                                        <strong>Código proveedor: </strong>
                                                        <span t-field="s.product_code"/>
                                                    </t>
                                                </div>
                                            </t>
                                        </t>
                                    </td>
                                </t>
                                <td>
                                    <span t-field="line.name"/>
                                </td>
                                <td>
                                    <span t-esc="', '.join(map(lambda x: x.name, line.taxes_id))"/>
                                </td>
                                <td class="text-center">
                                    <span t-field="line.date_planned" t-options='{"format": "dd/MM/yyyy"}'/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.product_qty"/>
                                    <span t-field="line.product_uom.name" groups="product.group_uom"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.price_unit"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.discount"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.price_subtotal"
                                          t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="row">
                        <div class="col-xs-4 pull-right">
                            <table class="table table-condensed">
                                <tr class="border-black">
                                    <td><strong>Subtotal</strong></td>
                                    <td class="text-right">
                                        <span t-field="o.amount_untaxed"
                                              t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Taxes</td>
                                    <td class="text-right">
                                        <span t-field="o.amount_tax"
                                              t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </td>
                                </tr>
                                <tr class="border-black">
                                    <td><strong>Total</strong></td>
                                    <td class="text-right">
                                        <span t-field="o.amount_total"
                                              t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-xs-12 pull-right">
                            <table class="table">
                                <tr>
                                    <td class="text-right">
                                        <strong>Importe total con letra: </strong><span t-esc="o.l10n_mx_edi_amount_to_text(o.currency_id.name)"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <strong>Notas:</strong>
                    <p t-field="o.notes"/>
                    <div class="oe_structure"/>
                </div>

                <footer>
                    <table class="table table-condensed">
                        <tr>
                            <th>
                                <strong>
                                    Agradecemos que nos envíen su CFDi al siguiente email: cfd_proveedores@grupoifaco.com e incluir en el asunto nuestro número de orden de compra: [<span t-field="o.name"/>]
                                    sin mezclar partidas de órdenes diferentes en el mismo CFDi. Enviar copia del correo al comprador.
                                </strong>
                            </th>
                        </tr>
                    </table>

                    <table class="table" style='border: inset 0pt'>
                        <tr>
                            <tr>
                                <th style="text-align: center;">
                                    <br/>
                                    <br/>
                                    <br/>
                                    _____________________________
                                    <br/>
                                    Gerencia
                                </th>
                                <th style="text-align: center;">
                                    <br/>
                                    <br/>
                                    <br/>
                                    _____________________________
                                    <br/>
                                    Jefatura de Compras
                                </th>
                                <th style="text-align: center;">
                                    <br/>
                                    <br/>
                                    <br/>
                                    _____________________________
                                    <br/>
                                    Proveedor DD/MMM/AA
                                </th>
                            </tr>
                        </tr>
                    </table>
                </footer>


            </t>


        </html>
    </template>

    <template id="report_purchaseorder">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="purchase.report_purchaseorder_document" t-lang="o.partner_id.lang"/>
            </t>
        </t>
    </template>
</odoo>
