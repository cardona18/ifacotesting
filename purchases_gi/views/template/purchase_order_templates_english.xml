<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_purchaseorder_document_english">
    <html lang="es">
    
    <t t-call="web.external_layout">
        <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
        <div class="page">
            <div class="oe_structure"/>
            <div class="row">
                <div class="col-xs-6">
                    <strong>Shipping address:</strong>
                    <div t-if="o.dest_address_id">
                        <div t-field="o.dest_address_id"
                            t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                    </div>
                    <div t-if="not o.dest_address_id and o.picking_type_id and o.picking_type_id.warehouse_id">
                        <span t-field="o.picking_type_id.warehouse_id.name"/>
                        <div t-field="o.picking_type_id.warehouse_id.partner_id"
                            t-options='{"widget": "contact", "fields": ["address", "phone"], "no_marker": True, "phone_icons": True}'/>
                    </div>
                </div>
                <div class="col-xs-5 col-xs-offset-1">
                    <strong>Supplier:</strong>
                    <div t-field="o.partner_id"
                        t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                        <p t-if="o.partner_id.vat"><t t-esc="o.company_id.country_id.vat_label or 'TIN'"/>: <span t-field="o.partner_id.vat"/></p>
                </div>
            </div>

            <h2 t-if="o.state != 'draft'">Purchase Order Confirmation #<span t-field="o.name"/></h2>
            <h2 t-if="o.state == 'draft'">Request for Quotation #<span t-field="o.name"/></h2>

            <div class="row mt32 mb32">
                <div t-if="o.name" class="col-xs-3">
                    <strong>Our Order Reference:</strong>
                    <p t-field="o.name"/>
                </div>
                <div t-if="o.partner_ref" class="col-xs-3">
                    <strong>Your Order Reference:</strong>
                    <p t-field="o.partner_ref"/>
                </div>
                <div t-if="o.date_order" class="col-xs-3">
                    <strong>Order Date:</strong>
                    <p t-field="o.date_create_order"/>
                </div>
                <div t-if="o.type_origin" class="col-xs-3">
                    <strong>Order type:</strong>
                    <p t-field="o.type_origin"/>
                </div>
                <div t-if="o.currency_id" class="col-xs-3">
                    <strong>Currency:</strong>
                    <p t-field="o.currency_id"/>
                </div>
                <div t-if="o.boarding_ways" class="col-xs-3">
                    <strong>Way of shipment:</strong>
                    <p t-field="o.boarding_ways"/>
                </div>
                <div t-if="o.use_cfdi" class="col-xs-3">
                    <strong>Use of CFDI:</strong>
                    <p t-field="o.use_cfdi"/>
                </div>
                <div t-if="o.payment_method" class="col-xs-3">
                    <strong>Payment method:</strong>
                    <p t-field="o.payment_method"/>
                </div>
                <div t-if="o.way_to_pay" class="col-xs-3">
                    <strong>Way to pay:</strong>
                    <p t-field="o.way_to_pay"/>
                </div>
                <div t-if="o.partner_id.property_supplier_payment_term_id" class="col-xs-3">
                    <strong>Payment terms:</strong>
                    <p t-field="o.partner_id.property_supplier_payment_term_id"/>
                </div>

            </div>

            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th><strong>Product</strong></th>
                        <th><strong>Description</strong></th>
                        <th><strong>Tax</strong></th>
                        <th class="text-center"><strong>Date</strong></th>
                        <th class="text-right"><strong>Qty</strong></th>
                        <th class="text-right"><strong>Unit Price</strong></th>
                        <th class="text-right"><strong>Amount</strong></th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="o.order_line" t-as="line">
                        <td>
                            <span t-field="line.product_id.display_name"/>
                        </td>
                        <td>
                            <span t-field="line.name"/>
                        </td>
                        <td>
                            <span t-esc="', '.join(map(lambda x: x.name, line.taxes_id))"/>
                        </td>
                        <td class="text-center">
                            <span t-field="line.date_planned" t-options='{"format": "dd/MM/yyyy"}'/>
                        </td>
                        <td class="text-right">
                            <span t-field="line.product_qty"/>
                            <span t-field="line.product_uom.name" groups="product.group_uom"/>
                        </td>
                        <td class="text-right">
                            <span t-field="line.price_unit"/>
                        </td>
                        <td class="text-right">
                            <span t-field="line.price_subtotal"
                                t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="row">
                <div class="col-xs-4 pull-right">
                    <table class="table table-condensed">
                        <tr class="border-black">
                            <td><strong>Subtotal</strong></td>
                            <td class="text-right">
                                <span t-field="o.amount_untaxed"
                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                        <tr>
                            <td>Taxes</td>
                            <td class="text-right">
                                <span t-field="o.amount_tax"
                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                        <tr class="border-black">
                            <td><strong>Total</strong></td>
                            <td class="text-right">
                                <span t-field="o.amount_total"
                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>                          
                        </tr>
                    </table>
                </div>
                <div class="col-xs-12 pull-right">
                    <table class="table">
                        <tr>
                            <td class="text-right">
                                <strong>Total amount with letter: </strong><span t-esc="o.amount_to_text(o.amount_total)"/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <strong>Note:</strong>
            <p t-field="o.notes"/>
            <div class="oe_structure"/>
        </div>

        <footer>
            <table class="table table-condensed">
                <tr>
                    <th>
                        <strong>
                        We appreciate that you send us your CFDI to the following email: cfd_proveedores@grupoifaco.com and include in the subject our purchase order number: [<span t-field="o.name"/>]
                            without mixing pieces of different orders in the same CFDI. Send copy of the mail to the buyer.
                        </strong>
                    </th>
                </tr>
            </table>

            <table class="table" style='border: inset 0pt'>
                <tr>
                    <tr>
                        <th style="text-align: center;">
                            <br/>
                            <br/>
                            <br/>
                            _____________________________
                            <br/>
                            Management
                        </th>
                        <th style="text-align: center;">
                            <br/>
                            <br/>
                            <br/>
                            _____________________________
                            <br/>
                            Head of Purchasing
                        </th>
                        <th style="text-align: center;">
                            <br/>
                            <br/>
                            <br/>
                            _____________________________
                            <br/>
                            Supplier DD/MMM/AA
                        </th>
                    </tr>
                </tr>
            </table>
        </footer>


    </t>
    
    
    </html>
</template>

<template id="report_purchaseorder_english">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="purchases_gi.report_purchaseorder_document_english" t-lang="o.partner_id.lang"/>
        </t>
    </t>
</template>

    <report
            string="Purchase Order"
            id="action_report_purchase_order_english"
            model="purchase.order"
            report_type="qweb-pdf"
            name="purchases_gi.report_purchaseorder_english"
            file="purchases_gi.report_purchaseorder_english"
            print_report_name="
                (object.state in ('draft', 'sent') and 'Request for Quotation - %s' % (object.name) or
                'Purchase Order - %s' % (object.name))"
        />


</odoo>
