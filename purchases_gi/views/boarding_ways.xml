<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>

        <!-- BOARDING WAYS VIEWS -->

        <record id="boarding_ways_action" model="ir.actions.act_window">
            <field name="name">vias_de_embarque</field>
            <field name="res_model">boarding.ways</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.ui.view" id="boarding_ways_form">
            <field name="name">boarding_ways_form</field>
            <field name="model">boarding.ways</field>
            <field name="arch" type="xml">
                <form name="Vías de embarque">
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </form>           
            </field>
        </record>

        <record model="ir.ui.view" id="boarding_ways_tree">
            <field name="name">"boarding_ways_tree"</field>
            <field name="model">boarding.ways</field>
            <field name="arch" type="xml">
                <tree name="Vías de embarque">
                    <field name='name'/>
                </tree>
            </field>
        </record>

        <menuitem id="boarding_ways_menu" parent="purchase.menu_product_in_config_purchase" name="Vías de embarque" action="boarding_ways_action" sequence="10"/>

    </data>
</openerp>
