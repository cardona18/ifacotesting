<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>

        <!-- INPUT FREE WIZARD -->

        <act_window id="input_free_wizard_action" name="Entrada sin costo" res_model="input.free.wizard" view_mode="form" target="new"/>

        <record model="ir.ui.view" id="input_free_wizard_form_view">
            <field name="name">input_free_wizard_form</field>
            <field name="model">input.free.wizard</field>
            <field name="arch" type="xml">
                <form string="Entrada sin costo">
                    <group>
                        <field name="stock_id" invisible="1"/>
                        <field name="product_id"/>
                        <field name="product_uos"/>
                        <field name="quantity" min="1"/>
                    </group>

                    <footer>
                        <button name="free_admission" type="object" string="Recibir producto sin costo" class="oe_highlight"/>
                        o
                        <button special="cancel" string="Cancelar"/>
                    </footer>

                </form>
            </field>
        </record>


    </data>
</openerp>
