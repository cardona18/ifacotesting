<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>

        <!-- ADD PURCHASE REQUEST -->

        <act_window id="add_purchase_request_action" name="Vincular solicitudes de cotización" res_model="add.purchase.request" view_mode="form" target="new"/>

        <record model="ir.ui.view" id="add_purchase_request_form_view">
            <field name="name">add_purchase_request_form</field>
            <field name="model">add.purchase.request</field>
            <field name="arch" type="xml">
                <form string="Vincular solicitudes de cotización">
                    <field name="id_o" invisible="1"/>
                    <field name="order_purchase_id" invisible="1"/>
                    <field name="purchases_request" class="oe_field_purchases_requests" options="{'no_create':True, 'create_edit': false,'no_open': false}" domain="[('id','!=',id_o),('is_a_purchases_order','=', True),('state', 'not in',('draft','cancel','related','approved'))]" />
                    <footer>
                        <button name="add_purchase_request_in_order" widget="many2many_tags" type="object" string="Vincular" class="oe_highlight"/>
                        o
                        <button special="cancel" string="Cancelar"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- <menuitem id="add_purchase_request_menu" name="ADD PURCHASE REQUEST" sequence="10" action="add_purchase_request_action" /> -->

    </data>
</openerp>
