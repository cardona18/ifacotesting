<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_quotation_transfer" model="ir.ui.view">
        <field name="name">purchase.quotation.transfer.view.form</field>
        <field name="model">purchase.inmediate.transfer</field>
        <field name="arch" type="xml">
            <form string="Lineas sin asignar cotizacion?">
                <group>
                    <p>
                        Tiene <i>linea(s)</i> sin asignarle(s) una cotizacion,
                        ¿Que deseas realizar con ella(s)?
                    </p>
                </group>
                <footer>
                    <button name="process" string="Dejar pendiente lineas sin cotizacion" type="object" class="btn-primary"/>
                    <button name="cancel_line" string="Cancelar lineas sin cotizacion" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="view_cancel_line" model="ir.ui.view">
        <field name="name">purchase.cancel.line.view.form</field>
        <field name="model">purchase.inmediate.transfer</field>
        <field name="arch" type="xml">
            <form string="Lineas sin asignar cotizacion?">
                <group>
                    <p>
                        Se cancelará la(s) <i>linea(s)</i> sin cotización, ¿Deseas continuar la cancelación?
                    </p>

                </group>
                <group>
                    <field name="comments" required="1" string="Motivo de cancelación"/>
                </group>
                <footer>
                    <button name="cancel_line_process" string="Cancelar lineas sin cotizacion" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>