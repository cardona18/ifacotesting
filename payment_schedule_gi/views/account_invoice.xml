<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- ACCOUNT INVOICE VIEWS -->

        <record id="invoice_import_form_inherit_payment_schedule" model="ir.ui.view">
            <field name="name">invoice_import.invoice.form.inherit.gi</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='currency_id']" position="after">
                    <field name="perm_payment" invisible="1"/>
                    <field name="payment_schedule_date" attrs="{'readonly': [('perm_payment', '!=', True)]}"/>
                </xpath>

            </field>
        </record>



        <record id="filter_account_invoice_gi" model="ir.filters">
            <field name="name">Facturas programadas para pago</field>
            <field name="model_id">account.invoice</field>
            <field name="domain">[["payment_schedule_date","!=",False],["state","!=","paid"],["state","!=","cancel"]]</field>
            <field name="user_id" eval="False"/>
            <field name="context">{}</field>
        </record>

    </data>
</odoo>
