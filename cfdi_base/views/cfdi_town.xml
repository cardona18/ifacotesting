<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>

        <!-- CFDI TOWN VIEWS -->

        <record id="cfdi_town_action" model="ir.actions.act_window">
            <field name="name">Municipios</field>
            <field name="res_model">cfdi.town</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.ui.view" id="cfdi_town_form">
            <field name="name">cfdi_town_form</field>
            <field name="model">cfdi.town</field>
            <field name="arch" type="xml">
                <form name="Municipios">
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="state_id"/>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="cfdi_town_tree">
            <field name="name">"cfdi_town_tree"</field>
            <field name="model">cfdi.town</field>
            <field name="arch" type="xml">
                <tree name="Municipios">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="state_id"/>
                </tree>
            </field>
        </record>

    </data>
</openerp>
