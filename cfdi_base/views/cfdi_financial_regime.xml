<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>

        <!-- CFDI FINANCIAL REGIME VIEWS -->

        <record id="cfdi_financial_regime_action" model="ir.actions.act_window">
            <field name="name">Regimen Fiscal</field>
            <field name="res_model">cfdi.financial.regime</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.ui.view" id="cfdi_financial_regime_form">
            <field name="name">cfdi_financial_regime_form</field>
            <field name="model">cfdi.financial.regime</field>
            <field name="arch" type="xml">
                <form name="Regimen Fiscal">
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="phy_person"/>
                        <field name="moral_person"/>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="cfdi_financial_regime_tree">
            <field name="name">"cfdi_financial_regime_tree"</field>
            <field name="model">cfdi.financial.regime</field>
            <field name="arch" type="xml">
                <tree name="Regimen Fiscal">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="phy_person"/>
                    <field name="moral_person"/>
                </tree>
            </field>
        </record>

    </data>
</openerp>
