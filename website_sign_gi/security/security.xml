<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="signgrupo" model="res.groups">
            <field name="name">Signer</field>
        </record>

        <record id="rule_group_signers" model="ir.rule">
            <field name="name">Acceso a documentos propios</field>
            <field name="model_id" ref="website_sign.model_signature_request"/>
            <field name="groups" eval="[(4, ref('signgrupo'))]"/>
            <field name="domain_force">['|', ('request_item_ids','=', user.email), '|', ('follower_ids', '=', user.email), ('create_uid', '=', user.email)]</field>
        </record>

    </data>
</openerp>
