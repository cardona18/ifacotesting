<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="production_lot_gi_form" model="ir.ui.view">
            <field name="name">production_lot_form_gi</field>
            <field name="model">stock.production.lot</field>
            <field name="inherit_id" ref="stock.view_production_lot_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='life_date']" position="attributes">
                    <attribute name="string">Fecha de vigencia</attribute>
                </xpath>

                <xpath expr="//field[@name='product_qty']" position="attributes">
                    <attribute name="digits">[9,3]</attribute>
                </xpath>

                <xpath expr="//field[@name='ref']" position="attributes">
                    <attribute name="string">Lote proveedor</attribute>
                </xpath>

                <xpath expr="//field[@name='ref']" position="after">
                    <field name="partner_id" readonly="0"/>
                    <field name="company_id" readonly="0"/>
                   <field name="type_product" invisible="1"/>
                </xpath>

                <xpath expr="//field[@name='alert_date']" position="after">
                    <field name="date_analysis"/>
                    <field name="doc_number"/>
                    <field name="num_container"/>
                    <field name="employee_id" options="{'no_create':True, 'create_edit': false}"/>

                </xpath>

                <xpath expr="//group[2]" position="after">

                    <group string="Valoración">
                        <field name="valuation"/>
                        <field name="unit_valuation"/>
                    </group>

                </xpath>

                <xpath expr="//group[1]" position="after">
                    <group string="Información del lote">
                        <field name="create_uid" readonly="1"/>
                        <field name="create_date" readonly="1"/>
                        <field name="write_uid" readonly="1"/>
                        <field name="write_date" readonly="1"/>
                    </group>
               </xpath>

            </field>
        </record>

        <record id="search_product_lot_filter_inherit_gi" model="ir.ui.view">
        <field name="name">stock.production.lot.search.inherit.gi</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="stock.search_product_lot_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <filter string="Productos almacenables" domain="[('type_product','=','product')]"/>
            </xpath>
        </field>
     </record>

        <record id="stock.action_production_lot_form" model="ir.actions.act_window">
            <field name="domain">[('type_product','=','product')]</field>
        </record>

    </data>
</odoo>
