<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

          <record id="quality_point_gi_form" model="ir.ui.view">
            <field name="name">quality_point_form_gi</field>
            <field name="model">quality.point</field>
            <field name="inherit_id" ref="quality.quality_point_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='test_type_id']" position="attributes">
                    <attribute name="string">Tipo de operación</attribute>
                    <attribute name="domain">[('technical_name','in',['control_gi','control_2_gi'])]</attribute>
                </xpath>

                <xpath expr="//field[@name='test_type_id']" position="after">
                    <label for="tolerance_min" string="Tolerance" attrs="{'invisible': [('test_type', '!=', 'control_gi')]}"/>
                    <div attrs="{'invisible': [('test_type', '!=', 'control_gi')]}" class="o_row">
                        <span>from </span> <field name="tolerance_min"/>
                        <span>to </span> <field name="tolerance_max"/>
                        
                    </div>
                </xpath>

            


                <xpath expr="//group[1]" position="after">
                    <group string="Información del control">
                        <field name="create_uid" readonly="1"/>
                        <field name="create_date" readonly="1"/>
                        <field name="write_uid" readonly="1"/>
                        <field name="write_date" readonly="1"/>
                    </group>
                </xpath>


            </field>
        </record>

        <record model="quality.point.test_type" id="quality_point_test_type_gi">
            <field name="name">Pre-Aprobar</field>
            <field name="technical_name">control_gi</field>
        </record>

        <record model="quality.point.test_type" id="quality_point_test_type_gi_second">
            <field name="name">Aprobar</field>
            <field name="technical_name">control_2_gi</field>
        </record>

        
    </data>
</odoo>
