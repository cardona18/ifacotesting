<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <!-- Etiquetas VIEWS -->

        <record id="control_tags_printer_action" model="ir.actions.act_window">
            <field name="name">Etiquetas</field>
            <field name="res_model">control.tags.printer</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.ui.view" id="control_tags_form">
            <field name="name">control_tags_form</field>
            <field name="model">control.tags.printer</field>
            <field name="arch" type="xml">
                <form name="Etiquetas">
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="name_char" readonly="1"/>
                        <field name="company_id" readonly="1"/>
                        <field name="lot_sup" readonly="1"/>
                        <field name="product_id" readonly="1"/>
                        <field name="default_code" readonly="1"/>
                        <field name="type_date" readonly="1"/>
                        <field name="life_date" readonly="1"/>
                        <field name="num_container" readonly="1"/>
                        <field name="user_printer" readonly="1"/>
                        <field name="printer"/>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="control_tags_tree">
            <field name="name">control_tags_tree</field>
            <field name="model">control.tags.printer</field>
            <field name="arch" type="xml">
                <tree name="Etiquetas">
                    <field name='name'/>
                </tree>
            </field>
        </record>

        <menuitem parent="stock.menu_warehouse_config" id="control_tags_menu" name="Etiquetas" action="control_tags_printer_action" sequence="90"/>

    </data>
</odoo>
