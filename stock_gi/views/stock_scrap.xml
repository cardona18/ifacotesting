<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        
        <record model="ir.ui.view" id="view_stock_scrap_gi">
            <field name="name">view_stock_scrap_form_gi</field>
            <field name="model">stock.scrap</field>
            <field name="inherit_id" ref="stock.stock_scrap_form_view"/>
            <field name="arch" type="xml">
                
                <xpath expr="//group[1]" position="after">
                    <group string="Planeación">
                        <field name="document_id" required="1" options="{'no_create':True, 'create_edit': false,'no_open': True}"/>
                        <field name="number" required="1"/>
                        <field name="reason_id" required="1" options="{'no_create':True, 'create_edit': false,'no_open': True}"/>
                        <field name="description"/>
                    </group>
                </xpath>

                <xpath expr="//group[1]" position="after">
                    <group string="Información modificaciones">
                        <field name="create_uid" readonly="1"/>
                        <field name="create_date" readonly="1"/>
                        <field name="write_uid" readonly="1"/>
                        <field name="write_date" readonly="1"/>
                    </group>
               </xpath>

            </field>
        </record>

    </data>
</odoo>

