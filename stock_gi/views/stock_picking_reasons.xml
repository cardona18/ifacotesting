<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <!-- Motivos VIEWS -->

        <record id="stock_picking_reasons_action" model="ir.actions.act_window">
            <field name="name">Motivos</field>
            <field name="res_model">stock.picking.reasons</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.ui.view" id="stock_picking_reasons_form">
            <field name="name">stock_picking_reasons_form</field>
            <field name="model">stock.picking.reasons</field>
            <field name="arch" type="xml">
                <form name="Motivos">
                    <group>
                        <field name="name"/>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="stock_picking_reasons_tree">
            <field name="name">stock_picking_reasons_tree</field>
            <field name="model">stock.picking.reasons</field>
            <field name="arch" type="xml">
                <tree name="Motivos">
                    <field name='name'/>
                </tree>
            </field>
        </record>

        <menuitem id="stock_picking_reasons_menu" name="Motivos" action="stock_picking_reasons_action" sequence="55" parent="stock.menu_warehouse_config"/>

    </data>
</odoo>
