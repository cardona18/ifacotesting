<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record model="ir.ui.view" id="view_inventory_form_gi">
            <field name="name">view_inventory_form_gi</field>
            <field name="model">stock.inventory</field>
            <field name="inherit_id" ref="stock.view_inventory_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='filter']" position="after">
                    <field name="document_id" required="1"/>      
                    <field name="number" required="1"/>      
                    <field name="reason_id" required="1"/>      
                    <field name="description"/>      
                </xpath>


            </field>
        </record>

    </data>
</odoo>
