<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record model="ir.ui.view" id="view_backorder_confirmation_gi">
            <field name="name">stock_backorder_confirmation_gi</field>
            <field name="model">stock.backorder.confirmation</field>
            <field name="inherit_id" ref="stock.view_backorder_confirmation"/>
            <field name="arch" type="xml">

                <xpath expr="//button[@name='process']" position="replace">
                    <button name="process_backorder_gi" string="Create Backorder" type="object" class="oe_highlight"/>
                </xpath>

                <xpath expr="//button[@name='process_cancel_backorder']" position="replace">
                    <button name="process_cancel_backorder_gi" string="No Backorder" type="object" class="btn-primary"/>
                </xpath>


            </field>
        </record>

    </data>
</odoo>
