<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <!-- Documentos VIEWS -->

        <record id="stock_picking_documents_action" model="ir.actions.act_window">
            <field name="name">Documentos</field>
            <field name="res_model">stock.picking.documents</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.ui.view" id="stock_picking_documents_form">
            <field name="name">stock_picking_documents_form</field>
            <field name="model">stock.picking.documents</field>
            <field name="arch" type="xml">
                <form name="Documentos">
                    <group>
                        <field name="name"/>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="stock_picking_documents_tree">
            <field name="name">stock_picking_documents_tree</field>
            <field name="model">stock.picking.documents</field>
            <field name="arch" type="xml">
                <tree name="Documentos">
                    <field name='name'/>
                </tree>
            </field>
        </record>

        <menuitem id="stock_picking_documents_menu" name="Documentos" action="stock_picking_documents_action" sequence="40" parent="stock.menu_warehouse_config"/>

    </data>
</odoo>
