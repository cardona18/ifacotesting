<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>


        <record model="ir.ui.view" id="product_form_gi_barcode">
            <field name="name">product_form_gi_puchases</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr='//header' position="inside">
                    <button name="calculate_barcode_ean_13" type="object" string="Generar codigo EAN 13" class="oe_highlight"  icon="fa-barcode" attrs="{'invisible':['|',('sale_ok','==', False), ('barcode','!=', False)]}" groups="stock.group_stock_manager"/>
                </xpath>

                <xpath expr="//field[@name='barcode']" position="attributes">
                    <attribute name="attrs">{'invisible':[('sale_ok','==', False)]}</attribute>
                    <attribute name="groups">stock.group_stock_manager</attribute>
                </xpath>

              

            </field>
        </record>

    </data>
</openerp>
