<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <!-- SALE BIDDING VIEWS -->

        <record id="sale_bidding_action" model="ir.actions.act_window">
            <field name="name">Licitaciones</field>
            <field name="res_model">sale.bidding</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="sale_bidding_orders_request" model="ir.actions.act_window">
            <field name="name">Pedidos</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order</field>
            <field name="src_model">sale.bidding</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'default_bidding_id': active_id}</field>
            <field name="domain">[('bidding_id', '=', active_id)]</field>
            <field name="view_id" eval="ref('sale.view_order_tree')"/>
        </record>

        <record model="ir.ui.view" id="sale_bidding_form">
            <field name="name">sale_bidding_form</field>
            <field name="model">sale.bidding</field>
            <field name="arch" type="xml">
                <form name="Licitaciones">

                    <header>
                        <button name="sales_gi.sale_bidding_codes_wizard_action" type="action" string="Procesar fallo" context="{'default_bidding_id': active_id}"/>
                    </header>

                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="sales_gi.sale_bidding_orders_request" type="action" class="oe_stat_button" icon="fa-pencil-square-o">
                                <field name="orders_count" widget="statinfo" string="Pedidos"/>
                            </button>
                        </div>
                        <group>
                            <field name="name"/>
                            <field name="date"/>
                            <field name="agent_id"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="sale_bidding_tree">
            <field name="name">sale_bidding_tree</field>
            <field name="model">sale.bidding</field>
            <field name="arch" type="xml">
                <tree name="Licitaciones">
                    <field name='name'/>
                    <field name="date"/>
                    <field name="agent_id"/>
                </tree>
            </field>
        </record>

        <menuitem id="sale_bidding_menu" name="Licitaciones" action="sale_bidding_action" sequence="50" parent="sale.sale_order_menu"/>

    </data>
</odoo>
