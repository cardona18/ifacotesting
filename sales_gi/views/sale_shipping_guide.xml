<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <!-- SALE SHIPPING GUIDE VIEWS -->

        <record id="sale_shipping_guide_action" model="ir.actions.act_window">
            <field name="name">Guias de embarque</field>
            <field name="res_model">sale.shipping.guide</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="shipping_guide_delivery_action" model="ir.actions.act_window">
            <field name="name">Entregas</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.picking</field>
            <field name="src_model">sale.shipping.guide</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'default_shipping_guide_id': active_id}</field>
            <field name="domain">[('shipping_guide_id', '=', active_id)]</field>
            <field name="view_id" eval="ref('stock.vpicktree')"/>
        </record>

        <record model="ir.ui.view" id="sale_shipping_guide_form">
            <field name="name">sale_shipping_guide_form</field>
            <field name="model">sale.shipping.guide</field>
            <field name="arch" type="xml">
                <form name="Guias de embarque">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="sales_gi.shipping_guide_delivery_action" type="action" class="oe_stat_button" icon="fa-truck">
                                <field name="shippings_count" widget="statinfo" string="Entregas"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <field name="send_date"/>
                            <field name="done_date"/>
                            <field name="send_method"/>
                            <field name="vehicle_id" options="{'no_create_edit': True, 'no_create':True }"/>
                            <field name="create_date" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="sale_shipping_guide_tree">
            <field name="name">sale_shipping_guide_tree</field>
            <field name="model">sale.shipping.guide</field>
            <field name="arch" type="xml">
                <tree name="Guias de embarque">
                    <field name='name'/>
                    <field name="send_date"/>
                    <field name="done_date"/>
                    <field name="send_method"/>
                    <field name="vehicle_id"/>
                    <field name="create_date"/>
                </tree>
            </field>
        </record>

        <!-- SALE SHIPMENTS SEQUENCE -->

        <record id="shipping_guide_sequence" model="ir.sequence">
            <field name="name">SHIPPING_GUIDE_SEQ</field>
            <field name="active">1</field>
            <field name="prefix">GE</field>
            <field name="suffix">/%(year)s</field>
            <field name="implementation">standard</field>
            <field name="padding">4</field>
        </record>

        <menuitem id="sale_shipping_guide_menu" name="Guias de embarque" action="sale_shipping_guide_action" sequence="40" parent="sale.sale_order_menu"/>

    </data>
</odoo>
