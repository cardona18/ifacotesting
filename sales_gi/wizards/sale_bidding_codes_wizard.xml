<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>

        <!-- SALE BIDDING CODES WIZARD -->

        <act_window id="sale_bidding_codes_wizard_action" name="Procesar fallo" res_model="sale.bidding.codes.wizard" view_mode="form" target="new"/>

        <record model="ir.ui.view" id="sale_bidding_codes_wizard_form_view">
            <field name="name">sale_bidding_codes_wizard_form</field>
            <field name="model">sale.bidding.codes.wizard</field>
            <field name="arch" type="xml">
                <form string="Procesar fallo">

                  <group>
                      <field name="bidding_id" invisible="1"/>
                      <field name="csv_file" filename="csv_filename"/>
                      <field name="csv_filename" invisible="1"/>
                      <field name="stage" invisible="1"/>
                  </group>
                  <separator string="Resultado" attrs="{'invisible': [('stage', '!=', 'R')]}"/>
                  <field name="log_result" attrs="{'invisible': [('stage', '!=', 'R')]}"/>

                  <footer>
                      <button name="process_product_codes" type="object" string="Procesar" class="oe_highlight"/>
                      or
                      <button special="cancel" string="Cancel"/>
                  </footer>

                </form>
            </field>
        </record>

    </data>
</openerp>
